{
  "task-types": {
    "indexing": {
      "index-benchmark": {
        "name": "ECOMMERCE_EVENTS",
        "description": "E-Commerce Events dataset",
        "replication-type": "cloud",
        "dataset-file": "ecommerce-events.json.gz",
        "file-format": "json",
        "max-docs": 5000000,
        "batch-size": 25000,
        "id-field": "id",
        "setups": [
          {
            "setup-name": "cloud_3x1",
            "collection": "ecommerce-events-${INDEX}",
            "configset": "conf_ecommerce_events",
            "share-configset": true,
            "replication-factor": 1,
            "shards": 256,
            "min-threads": 1,
            "max-threads": 1,
            "thread-step": 1
          }
        ]
      }
    },
    "querying": {
      "query-benchmark": {
        "name": "Facet queries",
        "collection": "ecommerce-events-${INDEX}",
        "query-file": "queries-ecommerce-heavy.json",
        "min-threads": 1,
        "max-threads": 1,
        "json-query": true,
        "shuffle": false,
        "rpm": 3000,
        "total-count": 2000,
        "warm-count": 10,
	      "query-node": 1
      }
    },
    "restart-solr-node": {
      "restart-solr-node": "${NODE_INDEX}",
      "await-recoveries": true
    }
  },
  "global-variables": {
    "collection-counter": 0,
    "query-counter": 0,
    "query-counter2": 0,
    "restart-counter": 0
  },
  "global-constants": {
    "HOST": "localhost",
    "PORT": "8983"
  },
  "execution-plan": {
    "task1": {
      "type": "indexing",
      "instances": 1,
      "concurrency": 1,
      "mode": "sync",
      "parameters": {
        "INDEX": "${collection-counter}",
        "SHARDS": 1
      },
      "pre-task-evals": [
          "inc(collection-counter,1)"
      ]
    },
    "task2": {
      "description": "Restart Solr node",
      "instances": 8,
      "concurrency": 4,
      "type": "restart-solr-node",
      "parameters": {
        "NODE_INDEX": "${restart-counter}"
      },
      "wait-for": "task1",
      "mode": "sync",
      "pre-task-evals": [
        "inc(restart-counter,1)"
      ]
    },
    "task3": {
      "type": "querying",
      "instances": 1,
      "concurrency": 4,
      "wait-for": "task2",
      "mode": "sync",
      "parameters": {
        "INDEX": "${query-counter}"
      },
      "pre-task-evals": [
          "inc(query-counter,1)"
      ]
    },
    "task4": {
      "type": "querying",
      "instances": 1,
      "concurrency": 4,
      "wait-for": "task3",
      "mode": "sync",
      "parameters": {
        "INDEX": "${query-counter2}"
      },
      "pre-task-evals": [
          "inc(query-counter2,1)"
      ]
    }

  },
  "cluster": {
    "num-solr-nodes": 6,
    "startup-params": "-m 9g -V",
    "startup-params-overrides": ["-m 2g -V -Dsolr.node.roles=overseer:preferred,data:off", "-m 9g -V -Dsolr.node.roles=coordinator:on,data:off"],
    "provisioning-method": "local"
  },
    "repository": {
	           "commit-id": "9fcd568ce5ca5509b7fd621051eed09c84d43ea5",
	           "description": "Solr 10x",
	           "name": "solr-repository",
	           "package-subdir": "/solr/packaging/",
	           "build-command": "git clean -fdx && cd solr && ../gradlew distTar",
	           "submodules": false,
	           "url": "https://github.com/apache/solr",
	           "user": "ishan"
	    },
	    "pre-download": ["https://home.apache.org/~ishan/ecommerce-events.json.gz"],
  "metrics": [
    "jvm/solr.jvm/memory.heap.usage", "jvm/solr.jvm/threads.count"
  ],
  "zk-metrics": [
    "sum_collections_read_per_namespace", "sum_collections_write_per_namespace"
  ]
}
